<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>My Legos</title>
    <!-- <link rel="stylesheet" href="/css/app.css" /> -->
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body>
    <img src="/img/charles-snow-chlL87-cZEM-unsplash.jpg" />
    <h1>My Lego Collection Home Page</h1>

    <nav>
      <a href="/legos/new">Add New Lego Set</a>
    </nav>

    <ul class="index-ul">
      <div class="grid grid-cols-4">
        <% for (let lego of legos) { %>
        <li class="index-li">
          <a href="/legos/<%= lego.id %>">
            <img class="index-img" src=" <%= lego.img %>  "
          /></a>
          <div class="grid justify-items-center">
            <div>
              <a href="/legos/<%= lego.id %>"> <%= lego.name %></a>
            </div>
            <div><%= lego.theme %></div>
            <div>
              Built: <% if (lego.built === true) { %> ✅ <% } else { %> ❎ <% }
              %>
            </div>
            <div>
              Purchaed: <% if (lego.purchased === true) { %> ✅ <% } else { %>
              ❎ <% } %>
            </div>

            <form action="/legos/<%=lego.id%>?_method=DELETE" method="POST">
              <input type="submit" value="DELETE" />
            </form>

            <a href="/legos/<%= lego.id %>/edit">Edit</a>
          </div>
        </li>
        <% } %>
      </div>
    </ul>
  </body>
</html>
