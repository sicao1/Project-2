<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>My Legos</title>
    <style>
      @import url("https://fonts.googleapis.com/css2?family=Mooli&display=swap");
    </style>
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
      tailwind.config = {
        theme: {
          extend: {
            colors: {
              forestGreen: "#374336",
              forestOrange: "#FFAB2D",
              lighterforestOrange: "#fff7ea",
              tan: "#79805A",
              darkforestGreen: "#37381D",
              lighterforestGreen: "#4b564a",
            },
          },
        },
        plugins: ["prettier-plugin-tailwindcss"],
      };
    </script>
  </head>

  <body class="bg-lighterforestGreen">
    <style type="text/css">
      body {
        font-family: "Mooli", sans-serif;
      }
    </style>

    <h1 class="bg-forestGreen text-forestOrange text-center p-20 text-7xl">
      Add New Lego Set
    </h1>

    <nav class="bg-forestGreen text-center text-forestOrange pb-8 mb-20">
      <a
        class="hover:border-b-4 border-forestOrange ease-in-out duration-200"
        href="/legos"
        >Home</a
      >
    </nav>

    <form
      class="grid justify-center justify-items-left bg-forestOrange text-forestGreen mx-60 py-20 rounded-md"
      action="/legos"
      method="POST"
    >
      Name: <input type="text" name="name" /><br />
      Img Url: <input type="text" name="img" /><br />
      Theme:
      <select name="theme">
        <option value="Art">Art</option>
        <option value="Architect Series">Architect Series</option>
        <option value="DC">DC</option>
        <option value="Disney">Disney</option>
        <option value="Ideas">Ideas</option>
        <option value="Lego Icons">Lego Icons</option>
        <option value="Spider-Man">Spider-Man</option>
        <option value="Star Wars">Star Wars</option></select
      ><br />
      Pieces: <input type="number" name="pieces" /><br />
      Item Number: <input type="number" name="itemNumber" /><br />
      Dimensions:
      <input type="text" name="dimensions" placeholder="H: W: D:" /><br />
      <div>Built: <input type="checkbox" name="built" /></div>
      <div class="pb-10">
        Purchased: <input type="checkbox" name="purchased" />
      </div>
      <input
        class="cursor-pointer hover:border-b-4 border-forestGreen ease-in-out duration-200"
        type="submit"
        value="Add new Lego Set"
      />
    </form>
  </body>
</html>
