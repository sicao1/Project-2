<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>My Legos</title>
    <style>
      @import url("https://fonts.googleapis.com/css2?family=Mooli&display=swap");
    </style>
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
      tailwind.config = {
        theme: {
          extend: {
            colors: {
              forestGreen: "#374336",
              forestOrange: "#FFAB2D",
              lighterforestOrange: "#fff7ea",
              tan: "#79805A",
              darkforestGreen: "#37381D",
            },
          },
        },
        plugins: ["prettier-plugin-tailwindcss"],
      };
    </script>
  </head>

  <body>
    <body class="bg-forestGreen">
      <style type="text/css">
        body {
          font-family: "Mooli", sans-serif;
        }
      </style>

    <h1 class="bg-forestGreen text-forestOrange text-center p-20 text-7xl">
      Lego Collection
    </h1>

    <nav class="space-x-2 bg-forestGreen text-center text-forestOrange pb-8 mb-20">
      <a
        class="hover:border-b-4 border-forestOrange ease-in-out duration-200"
        href="/legos"
        >Home</a
      >
      <a
        class="hover:border-b-4 border-forestOrange ease-in-out duration-200 border-x-2 px-2"
        href="/legos/new"
        >Add new</a
      >
      <a class="hover:border-b-4 border-forestOrange ease-in-out duration-200" href="/legos/<%= lego.id %>/edit">Edit</a>
    </nav>

    <div class="flex justify-center mx-12">
      <div class="flex-auto - w-64">
        <h2 class="text-forestOrange text-4xl pb-10" ><%= lego.name %></h2>
        <img src=" <%= lego.img %>" />  
      </div>
      <div class="flex flex-col justify-center flex-auto w-32 text-forestOrange pl-20 leading-9">
        <h3 class="text-2xl mb-5" >Specifications:</h3>
        <p>Theme: <%= lego.theme %></p>
        <p># of pieces: <%= lego.pieces %></p>
        <p>Item #: <%= lego.itemNumber %></p>
        <p>Dimensions: <%= lego.dimensions %></p>
        <p>Built: <% if (lego.built === true) { %> ✅ <% } else { %> ❎ <% } %>
        </p>
        <p> Purchaed: <% if (lego.purchased === true) { %> ✅ <% } else { %> ❎ <% }%>
        </p>
      </div>
    </div>
  </body>
</html>
