<%- include('./partials/header.ejs') %>

<body class="bg-lighterforestGreen">
  <style type="text/css">
    body {
      font-family: "Mooli", sans-serif;
    }
  </style>

  <h1 class="bg-forestGreen text-forestOrange text-center p-20 text-7xl">
    Lego Collection
  </h1>

  <nav
    class="space-x-2 bg-forestGreen text-center text-forestOrange pb-8 mb-20"
  >
    <a
      class="hover:border-b-4 border-forestOrange ease-in-out duration-200"
      href="/legos"
      >Home</a
    >
    <a
      class="hover:border-b-4 border-forestOrange ease-in-out duration-200 border-x-2 px-2"
      href="/legos/new"
      >Add new</a
    >
    <a
      class="hover:border-b-4 border-forestOrange ease-in-out duration-200"
      href="/legos/<%= lego.id %>/edit"
      >Edit</a
    >
  </nav>

  <div class="flex justify-center mx-12 pb-20">
    <div class="flex-auto - w-64">
      <h2 class="text-forestOrange text-4xl pb-10"><%= lego.name %></h2>
      <img src=" <%= lego.img %>" />
    </div>
    <div
      class="flex flex-col justify-center flex-auto w-32 text-forestOrange pl-20 leading-9"
    >
      <h3 class="text-2xl mb-5">Specifications:</h3>
      <p>Theme: <%= lego.theme %></p>
      <p># of pieces: <%= lego.pieces %></p>
      <p>Item #: <%= lego.itemNumber %></p>
      <p>Dimensions: <%= lego.dimensions %></p>
      <p class="flex flex-row items-center">
        Built: <% if (lego.built === true) { %>
        <ion-icon
          class="text-xl pl-2"
          name="checkmark-circle-outline"
        ></ion-icon>
        <% } else { %>
        <ion-icon class="text-xl pl-2" name="close-circle-outline"></ion-icon>
        <% } %>
      </p>
      <p class="flex flex-row items-center">
        Purchased: <% if (lego.purchased === true) { %>
        <ion-icon
          class="text-xl pl-2"
          name="checkmark-circle-outline"
        ></ion-icon>
        <% } else { %>
        <ion-icon class="text-xl pl-2" name="close-circle-outline"></ion-icon>
        <% }%>
      </p>
    </div>
  </div>

  <%- include('./partials/footer.ejs') %>
</body>
